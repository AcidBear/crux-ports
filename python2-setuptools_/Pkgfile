# Description: Easily download, build, install, upgrade, and uninstall Python packages.
# URL: http://pypi.python.org/pypi/setuptools
# Maintainer: Jake Slazenger jake dot slazenger at yandex dot com
# Packager: Danny Rawlins, crux at romster dot me
# Depends on: python2

name=python2-setuptools
version=25.1.1
release=1
#source=(http://pypi.python.org/packages/source/s/$name/$name-$version.tar.gz)
source=(https://pypi.python.org/packages/9c/25/fa63da717a694ecf3bdb27f438450f535cdcabd77a955b5b05113f1abd11/setuptools-25.1.1.tar.gz)

build() {
	cd setuptools-$version

	/usr/bin/python2 setup.py build

	/usr/bin/python2 setup.py install \
		--prefix=/usr \
		--root=$PKG \
		--optimize=1 \
		--skip-build
}
