# Description: Strongly-timed, Concurrent, and On-the-fly Music Programming Language
# URL: http://chuck.cs.princeton.edu/
# Maintainer: Jake Slazenger jake dot slazenger at yamdex dot com
# Depends on: libsndfile alsa-lib pulseaudio gcc make
# Optional: jack

name=chuck
version=1.3.5.2
release=1
source=(http://chuck.cs.princeton.edu/release/files/chuck-$version.tgz)

build()
{
	cd $name-$version
	cd src
	
	make linux-pulse
	
	# comment 'make linux-pulse' line and uncomment 'make linux-jack' one if using JACK
	# make linux-jack
	
	# or uncomment this one if using ALSA.
	#make linux-alsa
	
	mkdir $PKG/usr/bin -p
	install -Dm 755 chuck $PKG/usr/bin/chuck
}
